<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.2</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NSwag.MSBuild" Version="12.0.15" PrivateAssets="all" />
    <PackageReference Include="NLog.Web.AspNetCore" Version="4.8.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AspNet.WebApi.Server\AspNet.WebApi.Server.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="swagger.json" />
    <Content Update="appsettings.json" CopyToOutputDirectory="Always" />
    <Content Update="nlog.config" CopyToOutputDirectory="Always" />
    <Content Update="install.bat" CopyToOutputDirectory="Always" />
    <Content Update="uninstall.bat" CopyToOutputDirectory="Always" />
  </ItemGroup>
  <Target Name="NSwag" AfterTargets="Build">
    <Exec Command="$(NSwagExe_Core22) run /variables:ProjectFileName=$(ProjectFileName),InfoVersion=$(PackageVersion),Configuration=$(Configuration)" />
  </Target>
</Project>